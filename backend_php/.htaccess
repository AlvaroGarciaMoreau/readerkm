# Permitir acceso a archivos PHP
<Files ~ "\.php$">
    Order Allow,Deny
    Allow from all
</Files>

# Denegar acceso directo a imágenes (solo en subdirectorio trip_images)
<Files ~ "\.(jpg|jpeg|png|gif|webp|bmp)$">
    Order Deny,Allow
    Deny from all
</Files>

# Mensaje personalizado para acceso denegado a imágenes
ErrorDocument 403 "Acceso denegado. Las imágenes son privadas."

# Denegar acceso a archivos de sistema
<Files ~ "^\.(htaccess|htpasswd)$">
    Order Deny,Allow
    Deny from all
</Files>

# Prevenir listado de directorios
Options -Indexes

# Headers de seguridad adicionales
<IfModule mod_headers.c>
    Header always set X-Content-Type-Options nosniff
    Header always set X-Frame-Options DENY
    Header always set X-XSS-Protection "1; mode=block"
</IfModule>